<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cd_mech_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10sp"
            android:scaleType="fitCenter"
            android:src="@drawable/engineer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/cd_mech_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Edmund Rich"
                android:textColor="@color/navy_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/input_border_bottom"

            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardCornerRadius="25sp"
                app:cardElevation="0sp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:id="@+id/cd_car_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_car" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cd_select_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawablePadding="20sp"
                android:hint="Select Car"
                android:padding="10sp"
                android:textAllCaps="false"
                android:textColor="@color/navy_blue_dark"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/input_border_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@color/transparent"
                android:padding="5sp"
                android:src="@drawable/description" />

            <EditText
                android:id="@+id/cd_descrpt"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawablePadding="20sp"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:padding="10sp"
                android:textAllCaps="false"
                android:textColor="@color/navy_blue_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cd_select_descrpt"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Choose"
                android:textColor="@color/navy_blue_dark"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/input_border_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10sp"
                android:padding="5sp"
                android:src="@drawable/naira_icon" />

            <EditText
                android:id="@+id/cd_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawablePadding="20sp"
                android:hint="Amount"
                android:inputType="number"
                android:padding="10sp"
                android:textAllCaps="false"
                android:textColor="@color/navy_blue_dark"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="@string/ensure_paymentdesc"
            android:textColor="@color/red_dark"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cd_paymech"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="PAY!"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="italic|bold" />

    </LinearLayout>
</ScrollView>