<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_design">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:text="MECHANIC Profile"
                android:textAllCaps="true"
                android:textColor="#04465e"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="35sp"
                        app:cardPreventCornerOverlap="true">

                        <ImageView
                            android:id="@+id/uv_profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/add_camera" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/uv_choose_specification"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
                        android:drawableRight="@drawable/ic_unfold_more_black_24dp"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="Choose Specification"
                        android:maxLength="50"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/uv_choose_category"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:drawableEnd="@drawable/ic_unfold_more_black_24dp"
                        android:drawableRight="@drawable/ic_unfold_more_black_24dp"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="Choose Category"
                        android:maxLength="50"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/uv_company_name"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="Company Name"
                        android:maxLength="50"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/uv_number"
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/input_border_bottom"
                            android:cursorVisible="true"
                            android:gravity="center|start|bottom"
                            android:hint="Phone number"
                            android:inputType="number"
                            android:maxLength="50"
                            android:paddingBottom="5dp"
                            android:textColor="@color/black_effective"
                            android:textSize="18sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/uv_emailaddress"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:gravity="center|start|bottom"
                        android:hint="@string/email"
                        android:maxLength="50"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black_effective"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/uv_streetname"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:drawableEnd="@drawable/ic_location_on_black_24dp"
                        android:drawableRight="@drawable/ic_location_on_black_24dp"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="Street name"
                        android:maxLength="50"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/uv_cityname"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="City"
                        android:maxLength="50"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/uv_locality"
                        style="@style/TextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/input_border_bottom"
                        android:ellipsize="end"
                        android:ems="10"
                        android:gravity="center|start|bottom"
                        android:hint="Locality"
                        android:maxLength="50"
                        android:paddingBottom="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_effective"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/uv_website_url"
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/input_border_bottom"
                            android:cursorVisible="true"
                            android:gravity="center|start|bottom"
                            android:hint="Company website"
                            android:inputType="text"
                            android:maxLength="50"
                            android:paddingBottom="5dp"
                            android:textColor="@color/black_effective"
                            android:textSize="18sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/uv_description"
                            style="@style/TextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/input_border_bottom"
                            android:cursorVisible="true"
                            android:gravity="center|start|bottom"
                            android:hint="Description"
                            android:inputType="textMultiLine"
                            android:maxLength="150"
                            android:paddingBottom="5dp"
                            android:textColor="@color/black_effective"
                            android:textSize="18sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Images of Previous work/workshop or goods"
                            android:textColor="#00baff"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/uv_previous_works1"
                                android:layout_width="0sp"
                                android:layout_height="70sp"
                                android:layout_margin="10sp"
                                android:layout_weight="1"
                                android:src="@drawable/photo"
                                android:tag="tag1" />

                            <ImageView
                                android:id="@+id/uv_previous_works2"
                                android:layout_width="0sp"
                                android:layout_height="70sp"
                                android:layout_margin="10sp"
                                android:layout_weight="1"
                                android:src="@drawable/photo"
                                android:tag="tag1" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Account Details"
                            android:textColor="#00baff"
                            android:textSize="15sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/uv_account_name"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/input_border_bottom"
                                android:cursorVisible="true"
                                android:gravity="center|start|bottom"
                                android:hint="Account Name"
                                android:inputType="text"
                                android:maxLength="150"
                                android:paddingBottom="5dp"
                                android:singleLine="true"
                                android:textColor="@color/black_effective"
                                android:textSize="18sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/uv_account_bank"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/input_border_bottom"
                                android:cursorVisible="true"
                                android:gravity="center|start|bottom"
                                android:hint="Bank Name"
                                android:inputType="text"
                                android:maxLength="150"
                                android:paddingBottom="5dp"
                                android:singleLine="true"
                                android:textColor="@color/black_effective"
                                android:textSize="18sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/uv_account_num"
                                style="@style/TextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10sp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/input_border_bottom"
                                android:cursorVisible="true"
                                android:gravity="center|start|bottom"
                                android:hint="Account Number"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingBottom="5dp"
                                android:singleLine="true"
                                android:textColor="@color/black_effective"
                                android:textSize="18sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20sp" />

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uv_mech_update"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp"
                    android:text="Update"
                    android:textSize="18sp"
                    app:elevation="5sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
